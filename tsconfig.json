{
   "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "strict": false,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true
   },
   "include": ["src/**/*"],
   "exclude": ["node_modules"]
}
